<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubjectFragment">

    <ImageView
        android:id="@+id/backgroundBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/gradient_layout" />

    <ImageView
        android:id="@+id/create_category"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@id/backgroundBar"
        android:layout_margin="10dp"
        android:tint="@color/colorWhite"
        app:srcCompat="@drawable/ic_add_circle_black_24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="Kategorien"
        android:textColor="@color/colorWhite"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/bottomstroke"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/backgroundBar"
        android:background="@drawable/gradient_stroke" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bottomstroke"
        android:layout_marginStart="0dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ListView
            android:id="@+id/listViewSubject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


        </ScrollView>-->
    </LinearLayout>


</RelativeLayout>