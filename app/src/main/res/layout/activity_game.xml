<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Game">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/backgroundBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/gradient_layout"
        />

    <ImageView
        android:id="@+id/back_to_main"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="10dp"
        android:tint="@color/colorWhite"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kategorie"
        android:id="@+id/categoryName"
        android:padding="12dp"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:textColor="@color/colorWhite"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/gradient_stroke"
        android:layout_below="@+id/backgroundBar"/>

    </RelativeLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/colorOrange"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ops, es scheint wohl, dass Sie noch keine Frage erstelllt haben."
        style="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/question"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Answer1"
            android:textColor="@color/colorWhite"
            android:id="@+id/answer1"/>

        <TextView
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Answer3"
            android:textColor="@color/colorWhite"
            android:id="@+id/answer3"/>

        <TextView
            android:layout_marginLeft="100dp"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Answer2"
            android:textColor="@color/colorWhite"
            android:id="@+id/answer2"/>

        <TextView
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Answer4"
            android:textColor="@color/colorWhite"
            android:id="@+id/answer4"/>

    </RelativeLayout>

    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/nextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃ¤chste Frage"
            android:textColor="@color/colorWhite"
            android:background="@drawable/gradient_button"
            android:textAlignment="center"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_marginLeft="100dp"
            android:id="@+id/endGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beenden"
            android:textColor="@color/colorWhite"
            android:background="@drawable/gradient_button"
            android:textAlignment="center"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="10dp"
            tools:ignore="NotSibling" />

    </LinearLayout>



</LinearLayout>