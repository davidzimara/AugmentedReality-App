<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseCategory">

  <ImageView
      android:id="@+id/backgroundBar"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:background="@drawable/gradient_layout"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Kategorien"
      android:padding="12dp"
      android:gravity="center_horizontal"
      android:textSize="16dp"
      android:textColor="@color/colorWhite"
      />

  <ImageView
      android:id="@+id/bottomstroke"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@drawable/gradient_stroke"
      android:layout_below="@+id/backgroundBar"/>

  <LinearLayout
      android:orientation="vertical"
      android:layout_below="@id/bottomstroke"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:padding="10dp"
        android:text="WÃ¤hle eine Kategorie aus und lege los:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorOrange"/>

    <ListView
        android:id="@+id/listViewCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

  </LinearLayout>


</RelativeLayout>