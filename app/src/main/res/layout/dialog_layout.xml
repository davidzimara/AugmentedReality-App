<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:background="@drawable/gradient_dialog_layout"
    android:id="@+id/bottom_sheet">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:onClick="close_dialog"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erstellen sie eine Karteikarte"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textSize="21sp"
        android:text="FÃ¼r welche Kategorie?"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/newCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Neue Kategorie"
        android:textColor="@color/colorWhite"
        android:background="@drawable/gradient_button"
        android:textAlignment="center"
        android:paddingHorizontal="15dp"
        android:layout_gravity="center"
        android:drawableTint="@color/colorWhite"
        android:drawableLeft="@drawable/ic_add_circle_black_24dp"
        android:onClick="show_create_category"/>


    <TextView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Ihre Kategorien:"/>

    <ListView
        android:id="@+id/listViewDialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>